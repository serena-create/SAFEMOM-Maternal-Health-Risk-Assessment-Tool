import pandas as pd
import numpy as np
import joblib
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
from sklearn.metrics import (f1_score, accuracy_score, recall_score, 
                             precision_score, confusion_matrix, classification_report)
from lightgbm import LGBMClassifier


df = pd.read_csv("../data/processed/safemom_final_features.csv")
df["Risk"] = df["Risk"].astype(str).str.lower().map({"high": 1, "low": 0})
df = df.dropna(subset=["Risk"])


ui_features = [
    'age', 'systolic', 'diastolic', 'hemoglobin_check_result_v1', 
    'body_temperature_v1', 'no_pregnancy', 'total_antenatal_visits', 
    'duration_of_pregnancy_weeks_', 'pulse_rate_v1', 'bmi'
]

df['is_anemic'] = (df['hemoglobin_check_result_v1'] < 11.0).astype(int)
df['number_of_prior_deliveries'] = (df['no_pregnancy'] - 1).clip(lower=0)

selected_features = ui_features + ['is_anemic', 'number_of_prior_deliveries']
X = df[selected_features]
y = df['Risk']

#SPLIT
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.2, stratify=y, random_state=42
)

scaler = StandardScaler()
X_train_scaled = scaler.fit_transform(X_train)
X_test_scaled = scaler.transform(X_test)

#TRAIN
ratio = (len(y_train) - y_train.sum()) / y_train.sum()
final_model = LGBMClassifier(
    scale_pos_weight=ratio,
    random_state=42,
    verbosity=-1,
    n_estimators=200,
    learning_rate=0.05
)
final_model.fit(X_train_scaled, y_train)

# EVALUATION
y_preds = final_model.predict(X_test_scaled)

print("\n" + "="*40)
print("SAFEMOM CLINICAL PERFORMANCE REPORT")
print("="*40)
print(f"   Accuracy:  {accuracy_score(y_test, y_preds):.2%}")
print(f"   Precision: {precision_score(y_test, y_preds):.2%}")
print(f"   Recall:    {recall_score(y_test, y_preds):.2%}")
print(f"   F1-Score:  {f1_score(y_test, y_preds):.2%}")
print("-" * 40)

# Confusion Matrix
cm = confusion_matrix(y_test, y_preds)
print("CONFUSION MATRIX:")
print(f"True Low Risk:  {cm[0][0]} | False High Risk (Alarm): {cm[0][1]}")
print(f"False Low Risk (Missed): {cm[1][0]} | True High Risk: {cm[1][1]}")
print("-" * 40)
print("="*40)

#  ASSETS
joblib.dump(final_model, "../assets/safemom_model.pkl")
joblib.dump(selected_features, "../assets/model_columns.pkl")
joblib.dump(scaler, "../assets/scaler.pkl")
joblib.dump({}, "../assets/label_encoders.pkl") 

print(" Assets saved and ready for Streamlit!")
